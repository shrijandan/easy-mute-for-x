{
  "manifest_version": 3,
  "name": "Mute Them",
  "version": "0.1.0",
  "description": "Adds a Mute button next to usernames on X.",
  "permissions": [],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "style.css"
      ],
      "run_at": "document_idle"
    }
  ]
}
